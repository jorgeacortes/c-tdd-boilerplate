    "version": "0.2.0",
    "configurations": [
        {
            "name": "Windows MinGw gdb",
            "type": "cppdbg",
            "request": "launch",
            //"program": "${workspaceFolder}/build/app.exe",
            "program": "${workspaceFolder}/build/testRunner1.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
